{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "COMMON_ENV_VAR"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATABASE_URL"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "user-app#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "JWT_SECRET",
        "NEXTAUTH_URL"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "GITHUB_TOKEN"
  ]
}